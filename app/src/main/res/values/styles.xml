<resources>
    <style name="AppTheme" parent="Base.AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ViewText">
        <item name="android:textColor">@color/titleTextColor</item>
    </style>
    <style name="DrawerNameText" parent="ViewText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/titleTextColor</item>
    </style>
    <style name="Widget.MyApp.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">?colorPrimary</item>
        <item name="theme">@style/ThemeOverlay.MyApp.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>
</resources>
